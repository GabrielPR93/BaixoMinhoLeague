<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageViewCard">   <!-- CardView circular blanco-->
        <item name="cardCornerRadius">1000dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="EditTextWhiteBackground">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">16.5dp</item>
    </style>
    <style name="fuentePrincipal">
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MyTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <style name="TextViewError">
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingTop">5dp</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextViewIconError">
        <item name="android:textColor">@color/red</item>
        <item name="android:text">*</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="fontFamily">@font/hurmegeometricsans4</item>
    </style>

</resources>